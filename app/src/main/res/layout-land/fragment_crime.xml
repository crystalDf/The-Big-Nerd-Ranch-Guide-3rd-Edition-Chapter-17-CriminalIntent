<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrimeFragment"
    android:orientation="vertical">

    <include
        android:id="@+id/camera_and_title"
        layout="@layout/view_camera_and_title"/>

    <TextView
        android:id="@+id/crime_details_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/crime_details_label"
        style="?android:listSeparatorTextViewStyle"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/camera_and_title"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/crime_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/crime_details_label"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/crime_time"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/crime_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/crime_details_label"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/crime_requires_police"
        android:layout_marginEnd="8dp"/>

    <CheckBox
        android:id="@+id/crime_solved"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/crime_solved_label"
        app:layout_constraintLeft_toLeftOf="@+id/crime_requires_police"
        android:layout_marginStart="0dp"
        app:layout_constraintTop_toBottomOf="@+id/crime_details_label"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"/>

    <CheckBox
        android:id="@+id/crime_requires_police"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/crime_requires_police_label"
        app:layout_constraintTop_toBottomOf="@+id/crime_solved"
        android:layout_marginTop="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"/>

    <Button
        android:id="@+id/crime_suspect"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/crime_date"
        android:layout_marginTop="8dp"
        android:text="@string/crime_suspect_text"/>

    <Button
        android:id="@+id/crime_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/crime_suspect"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/crime_date"
        android:layout_marginTop="8dp"
        android:text="@string/crime_report_text"/>

    <Button
        android:id="@+id/crime_dial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/crime_report"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@+id/crime_date"
        android:layout_marginTop="8dp"
        android:text="@string/crime_dial_text"/>

</android.support.constraint.ConstraintLayout>